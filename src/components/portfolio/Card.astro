---
import { Image } from "astro:assets";

import projects from "../../data/portfolio.json";

import Badge from "./Badge.astro";
const { title, description, badgeContent, image, alt, showWebSite,url, gitHub } =
  Astro.props;
---

<div
class="relative flex w-full sm:w-96 flex-col items-center rounded-xl bg-clip-border text-gray-700 border-solid border-[1px] border-black shadow-md h-[600px] bg-accent backdrop-filter backdrop-blur-sm bg-opacity-20"
>
  <div
    class="relative mx-4 mt-4 h-56 overflow-hidden rounded-xl border-solid border-[1px] border-black text-gray-700"
  >
    <Image
    class="w-full h-full object-cover"
      src={image
        ? image
        : "https://cdn.midjourney.com/75934c24-aa6f-4240-9644-3f09e0784d23/0_2.webp"}
      alt={alt ? alt : "Alt de muestra"}
      width={500}
      height={300}
    />
  </div>

  <div class="p-6 h-60">
    <div class="flex mb-4">
      {
        badgeContent?.map((content, index) => (
          <Badge id={index}>{content}</Badge>
        ))
      }
    </div>
    <div class="mb-2 flex items-center justify-between">
      <p
        class=" text-xl text-black block font-sans font-medium leading-relaxed text-blue-gray-900 antialiased"
      >
        {title ? title : "Nombre del proyecto"}
      </p>
    </div>
    <p
      class=" serif block font-sans text-sm font-normal leading-normal text-black antialiased"
    >
      {description}
    </p>
  </div>
  <div class="mx-auto w-full sm:w-2/3 mt-5 flex flex-col items-center gap-2">
    <a
    href={gitHub} target="_blank"
      class="flex justify-center items-center content-center bg-black text-white py-1 px-4 rounded-2xl cursor-pointer"
      ><svg
        class="w-4 h-4 me-2"
        aria-hidden="true"
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path
          fill-rule="evenodd"
          d="M10 .333A9.911 9.911 0 0 0 6.866 19.65c.5.092.678-.215.678-.477 0-.237-.01-1.017-.014-1.845-2.757.6-3.338-1.169-3.338-1.169a2.627 2.627 0 0 0-1.1-1.451c-.9-.615.07-.6.07-.6a2.084 2.084 0 0 1 1.518 1.021 2.11 2.11 0 0 0 2.884.823c.044-.503.268-.973.63-1.325-2.2-.25-4.516-1.1-4.516-4.9A3.832 3.832 0 0 1 4.7 7.068a3.56 3.56 0 0 1 .095-2.623s.832-.266 2.726 1.016a9.409 9.409 0 0 1 4.962 0c1.89-1.282 2.717-1.016 2.717-1.016.366.83.402 1.768.1 2.623a3.827 3.827 0 0 1 1.02 2.659c0 3.807-2.319 4.644-4.525 4.889a2.366 2.366 0 0 1 .673 1.834c0 1.326-.012 2.394-.012 2.72 0 .263.18.572.681.475A9.911 9.911 0 0 0 10 .333Z"
          clip-rule="evenodd"></path>
      </svg> View on Git Hub</a
    >

    {
      showWebSite ? (
        <a 
        href={url}
        target="_blank"
        class="flex justify-center items-center content-center bg-black text-white py-1 px-4 rounded-2xl cursor-pointer">
          <svg class="w-4 h-4 me-2" width="20" height="20" viewBox="0 0 24 24">
            <path
              fill="currentColor"
              d="M16.36 14c.08-.66.14-1.32.14-2c0-.68-.06-1.34-.14-2h3.38c.16.64.26 1.31.26 2s-.1 1.36-.26 2m-5.15 5.56c.6-1.11 1.06-2.31 1.38-3.56h2.95a8.03 8.03 0 0 1-4.33 3.56M14.34 14H9.66c-.1-.66-.16-1.32-.16-2c0-.68.06-1.35.16-2h4.68c.09.65.16 1.32.16 2c0 .68-.07 1.34-.16 2M12 19.96c-.83-1.2-1.5-2.53-1.91-3.96h3.82c-.41 1.43-1.08 2.76-1.91 3.96M8 8H5.08A7.923 7.923 0 0 1 9.4 4.44C8.8 5.55 8.35 6.75 8 8m-2.92 8H8c.35 1.25.8 2.45 1.4 3.56A8.008 8.008 0 0 1 5.08 16m-.82-2C4.1 13.36 4 12.69 4 12s.1-1.36.26-2h3.38c-.08.66-.14 1.32-.14 2c0 .68.06 1.34.14 2M12 4.03c.83 1.2 1.5 2.54 1.91 3.97h-3.82c.41-1.43 1.08-2.77 1.91-3.97M18.92 8h-2.95a15.65 15.65 0 0 0-1.38-3.56c1.84.63 3.37 1.9 4.33 3.56M12 2C6.47 2 2 6.5 2 12a10 10 0 0 0 10 10a10 10 0 0 0 10-10A10 10 0 0 0 12 2"
            />
          </svg>{" "}
          Visit Web Site
        </a>
      ) : (
        <a 
         
        class="flex justify-center items-center content-center border-black border-solid border-2  text-black py-1 px-4 rounded-2xl cursor-not-allowed">
          <svg
          class="w-4 h-4 me-2"
            
            width="20"
            height="20"
            viewBox="0 0 24 24"
          >
            <path
              fill="currentColor"
              d="M9.4 4.44c-.21.39-.4.79-.56 1.2l1.53 1.53c.41-1.12.96-2.17 1.63-3.14c.83 1.2 1.5 2.54 1.91 3.97H11.2l2 2h1.14c.06.41.1.84.13 1.27l1.97 1.97c.03-.41.06-.82.06-1.24c0-.68-.06-1.34-.14-2h3.38c.16.64.26 1.31.26 2s-.1 1.36-.26 2H17.2l3.3 3.28c.94-1.53 1.5-3.34 1.5-5.28c0-5.5-4.5-10-10-10c-1.94 0-3.75.56-5.28 1.5L8.18 5c.39-.23.82-.42 1.22-.56M18.92 8h-2.95a15.65 15.65 0 0 0-1.38-3.56c1.84.63 3.37 1.9 4.33 3.56M2.39 1.73L1.11 3l2.95 2.95A9.91 9.91 0 0 0 2 12c0 5.5 4.5 10 10 10c2.28 0 4.37-.77 6.06-2.05l2.78 2.78l1.27-1.27zM5.5 7.37l.61.63H5.08c.12-.22.26-.42.42-.63M4.26 14C4.1 13.36 4 12.69 4 12s.1-1.36.26-2h3.38c-.08.66-.14 1.32-.14 2s.06 1.34.14 2zm.82 2H8c.35 1.25.8 2.45 1.4 3.56A8.008 8.008 0 0 1 5.08 16m4.42-4c0-.2 0-.39.03-.58L12.11 14H9.66c-.1-.66-.16-1.32-.16-2m2.5 7.96c-.83-1.2-1.5-2.53-1.91-3.96h3.82c-.41 1.43-1.08 2.76-1.91 3.96m2.59-.4c.37-.68.67-1.41.91-2.15l1.12 1.09c-.62.45-1.3.81-2.03 1.06"
            />
          </svg>
          Just Git Hub Repo    </a>
      )
    }
  </div>
</div>
