<svg class="circles" width="900" height="900" viewBox="0 0 200 200">
  <circle cx="100" cy="100" r="90" stroke="gray" stroke-width="0.2" fill="none"
  ></circle>
  <circle cx="80" cy="60" r="50" stroke="gray" stroke-width="0.1" fill="none"
  ></circle>
  <circle cx="120" cy="80" r="60" stroke="gray" stroke-width="0.1" fill="none"
  ></circle>
</svg>

<style>
  .portfolio-container {
    position: relative;
  }

  .circles {
    position: absolute;
    top: 30%;
    right: 90%;
    transform: translate(80%, -70%);
    z-index: -10;
  }
</style>
