---
import Card from "./Card.astro";
import projects from "../../data/portfolio.json";


---

<section class="portfolio-container mx-auto xl:w-3/4 mb-20">
  <h2 class="font-bold xl:text-7xl text-4xl my-20 xl:ml-10 text-center">Portfolio</h2>
  <div class="flex flex-wrap justify-center gap-5 xl:ml-10">
    {
      projects.map((project) => (
        <Card
          alt={project.alt}
          image={project.image}
          title={project.project}
          description={project.description}
          badgeContent={project.technologies}
          showWebSite={project.online}
          url={project.url}
          gitHub={project.github}
        />
      ))
    }

